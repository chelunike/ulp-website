<!-- JuegoLibresection.astro -->
---
import Layout from '../layouts/Layout.astro';
const { titulo, descripcion, imgPath, link } = Astro.props;
---

<section class="relative overflow-hidden py-20 lg:py-[115px] bg-gradient-to-bl from-primary/80 from-30% via-secondary/85 via-70% to-tertiary/95">
  <div class="absolute inset-0 min-h-full min-w-full -z-10">
    <img src={imgPath} alt="" class="w-full h-full object-cover" />
  </div>
  <div class="container relative z-10">
    <div class="flex flex-wrap items-center">
      <div class="w-full px-4">
        <div class="mx-auto max-w-[780px] text-center">
          <h2 class="text-3xl font-bold text-white mb-6">{titulo}</h2>
          <p class="mx-auto text-base text-white font-medium mb-9 max-w-[600px]">{descripcion}</p>
          {link ? <a href={link} target="_blank" rel="noopener noreferrer" class="inline-flex items-center justify-center rounded-md bg-white py-[14px] px-7 text-base font-medium text-dark shadow-lg transition duration-300 ease-in-out hover:text-body-color hover:bg-gray-200">Canal de Twitch</a> : ''}
        </div>
      </div>
    </div>
  </div>
</section>
